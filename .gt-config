# -*- ruby -*-

Gravitext::DevTools.configure do |c|

  c.setup_header do |h|
    h.holder = "David Kellum"
    h.inception = 2011
    h.license = :apache
    h.exclusions += %w[ test/config.rb test/alt_entry.rb test/test_load_dir/*
                        .travis.yml ]
  end

  c.setup_manifest do |m|
    m.exclusions += %w[ .travis.yml ]
  end

end
